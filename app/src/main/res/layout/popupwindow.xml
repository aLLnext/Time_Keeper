<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:id="@+id/constraintLayout">

        <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/popup_title"
                android:hint="@string/popup_title"
                app:met_floatingLabel="highlight"
                tools:layout_edotor_absoluteX="8dp"
                android:maxLines="1"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintHorizontal_bias="0.523"
                android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"/>

        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:gravity="bottom|left"
                android:maxLines="6"
                android:scrollbars="vertical"
                android:id="@+id/popup_comment"
                android:hint="@string/popup_comment"
                app:met_floatingLabel="highlight"
                tools:layout_edotor_absoluteX="8dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintHorizontal_bias="0.523" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/popup_title"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/popup_comment" app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="16dp" android:id="@+id/constraintLayout2"
                android:weightSum="1.0">

            <Button
                    android:id="@+id/minus30min"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="-30"
                    android:layout_weight="0.20"/>
            <Button
                    android:id="@+id/minus5min"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="-5"
                    android:layout_weight="0.20"/>
            <Chronometer
                    android:id="@+id/popup_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:format="00:00:00"
                    android:layout_weight="0.20"/>
            <Button
                    android:id="@+id/plus5min"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="+5"
                    android:layout_weight="0.20"/>
            <Button
                    android:id="@+id/plus30min"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="+30"
                    android:layout_weight="0.20"/>


        </LinearLayout>

        <Button
                android:id="@+id/popup_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/popup_save"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>